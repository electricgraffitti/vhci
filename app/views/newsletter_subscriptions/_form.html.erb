<%= form_for(@newsletter_subscription) do |f| %>
  <%= render :partial => "shared/error_block", :locals => {:object => f} %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :active_subscription %><br />
    <%= f.check_box :active_subscription %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>